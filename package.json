{
  "name": "@vivekkumartiwari/word-wrap",
  "description": "Wrap words to a specified length.",
  "version": "1.2.8",
  "homepage": "https://github.com/vivekkumartiwari/word-wrap",
  "author": "Vivek",
  "contributors": [
    "Vivek"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/VivekKumarTiwariIntel/word-wrap.git"
  },
  "bugs": {
    "url": "https://github.com/aashutoshrathi/word-wrap/issues"
  },
  "license": "MIT",
  "files": [
    "index.js",
    "index.d.ts"
  ],
  "main": "index.js",
  "engines": {
    "node": ">=0.10.0"
  },
  "scripts": {
    "test": "mocha"
  },
  "devDependencies": {
    "gulp-format-md": "^0.1.11",
    "mocha": "^3.2.0"
  },
  "keywords": [
    "break",
    "carriage",
    "line",
    "new-line",
    "newline",
    "return",
    "soft",
    "text",
    "word",
    "word-wrap",
    "words",
    "wrap"
  ],
  "typings": "index.d.ts",
  "verb": {
    "toc": false,
    "layout": "default",
    "tasks": [
      "readme"
    ],
    "plugins": [
      "gulp-format-md"
    ],
    "lint": {
      "reflinks": true
    },
    "related": {
      "list": [
        "common-words",
        "shuffle-words",
        "unique-words",
        "wordcount"
      ]
    },
    "reflinks": [
      "verb",
      "verb-generate-readme"
    ]
  }
}